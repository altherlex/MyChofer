<div class="wrapper">
	<section id="signin" class="page">
		<h2><%= I18n.t 'devise.passwords.title' -%></h2>

		<%= form_for(resource, :as => resource_name, :url => password_path(resource_name), :html => { :method => :post }) do |f| %>
			<div class="row">
				<%= devise_error_messages! %>
			</div>
			<div class="row">
				<%= f.email_field :email, {:class=>'text',:placeholder=>'E-mail'} %>
			</div>
			<div class="row">
			<%= f.submit "Send me reset password instructions", {:class=>"submit"} %>
			</div>
		<% end %>
		<div class="row">
			<%= render "devise/shared/links" %>
		</div>
	</section>
</div>