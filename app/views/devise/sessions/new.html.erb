<div class="wrapper">
	<section id="signin" class="page">
		<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
			<header>
				<h2>Login</h2>
				<span>Não é membro ainda?
					<%= link_to "Cadastre-se", new_registration_path(resource_name) %><br />
				</span>
			</header>
			<div class="row">
				<p class="notice" style='color:blue;'><%= notice %></p>
				<p class="alert" style='color:red;'><%= alert %></p>
			</div>
			<div class="row">
				<%= f.email_field :email, {:class=>'text',:placeholder=>'E-mail',:autofocus=>'autofocus'} %>
			</div>
			<div class="row"><%= f.password_field :password, {:class=>'text',:placeholder=>'Senha'} %></div>
			
			<% if devise_mapping.rememberable? -%>
				<div>
					<%= f.check_box :remember_me %>
					<%= f.label 'Mantenha-me conectado' %>
				</div>
			<% end -%>
			<div class="row">
				<div class="field">
					<%- if devise_mapping.recoverable? && controller_name != 'passwords' %>
						<%= link_to "Esqueci minha senha", new_password_path(resource_name)%><br />
					<% end -%>
					<%= f.submit "Entrar", {:class=>"submit"}%>
				</div>
			</div>
		<% end %>
</section>
</div>